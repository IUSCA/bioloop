    "host": "localhost"
  },
  "logger": {
    "level": "debug"
  },
  "postgres": {
    "hostname": "localhost",
    "port": "5432",
    "user": "dgluser",
    "password": "",
    "db": "dgl",
    "schema": "public"
  },
  "workflow_server": {
    "base_url": "http://localhost:5000",
    "auth_token": ""
  },
  "auth": {
    "mode": "dev",
    "jwt": {
      "iss": "localhost",
      "ttl_milliseconds": 604800000,
      "pub": "keys/auth.pub",
