{
  "mode": "default",
  "app_id": "bioloop-dev.sca.iu.edu",
  "express": {
    "port": 3030,
    "host": "localhost"
  },
  "logger": {
    "level": "debug"
  },
  "workflow_server": {
    "base_url": "http://127.0.0.1:5001",
    "auth_token": ""
  },
  "auth": {
    "mode": "dev",
    "jwt": {
      "iss": "localhost",
      "ttl_milliseconds": 604800000,
      "pub": "keys/auth.pub",
      "key": "keys/auth.key",
      "sign_algorithm": "RS256"
    },
    "google": {
      "enabled": true,
      "authorization_endpoint": "https://accounts.google.com/o/oauth2/v2/auth",
      "token_endpoint": "https://oauth2.googleapis.com/token",
      "scope": "openid email",
      "client_id": "",
      "client_secret": ""
    },
    "cilogon": {
      "enabled": true,
      "authorization_endpoint": "https://cilogon.org/authorize",
      "token_endpoint": "https://cilogon.org/oauth2/token",
      "scope": "openid+email",
      "client_id": "",
      "client_secret": ""
    }
  },
  "oauth": {
    "base_url": "",
    "download": {
      "client_id": "",
      "client_secret": "",
      "scope_prefix": "download_file:"
    },
    "upload": {
      "scope_prefix": "upload_file:"
    }
  },
  "upload": {
    "path": "",
    "types": {
      "DATASET": "DATASET"
    },
    "status": {
      "UPLOADING": "UPLOADING",
      "UPLOAD_FAILED": "UPLOAD_FAILED",
      "UPLOADED": "UPLOADED",
      "PROCESSING": "PROCESSING",
      "PROCESSING_FAILED": "PROCESSING_FAILED",
      "COMPLETE": "COMPLETE",
      "FAILED": "FAILED"
    }
  },
  "download_server": {
    "base_url": ""
  },
  "workflow_registry": {
    "integrated": {
      "description": "An end-to-end workflow to inspect, archive, state and validate a dataset",
      "steps": [
        {
          "name": "await stability",
          "task": "await_stability"
        },
        {
          "name": "inspect",
          "task": "inspect_dataset"
        },
        {
          "name": "archive",
          "task": "archive_dataset"
        },
        {
          "name": "stage",
          "task": "stage_dataset"
        },
        {
          "name": "validate",
          "task": "validate_dataset"
        },
        {
          "name": "setup_download",
          "task": "setup_dataset_download"
        }
      ]
    },
    "stage": {
      "steps": [
        {
          "name": "stage",
          "task": "stage_dataset"
        },
        {
          "name": "validate",
          "task": "validate_dataset"
        },
        {
          "name": "setup_download",
          "task": "setup_dataset_download"
        }
      ]
    },
    "delete": {
      "steps": [
        {
          "name": "delete",
          "task": "delete_dataset"
        }
      ]
    },
    "process_dataset_upload": {
      "steps": [
        {
          "name": "Process Dataset Upload",
          "task": "process_dataset_upload"
        }
      ]
    },
    "cancel_dataset_upload": {
      "steps": [
        {
          "name": "Cancel Dataset Upload",
          "task": "cancel_dataset_upload"
        }
      ]
    }

  },
  "dataset_types": [
    "RAW_DATA",
    "DATA_PRODUCT"
  ],
  "e2e": {
    "users": {
      "admin": {
        "username": ""
      },
      "operator": {
        "username": ""
      },
      "user": {
        "username": ""
      }
    }
  },
  "filesystem_search_spaces": "",
  "filesystem": {
    "search_spaces": "",
    "base_dir": {
      "slateScratch": "",
      "slateProject": ""
    },
    "mount_dir": {
      "slateScratch": "",
      "slateProject": ""
    }
  },
  "restricted_ingestion_dirs": {
    "slateScratch": "",
    "slateProject": ""
  },
  "enabled_features": {
    "fs": {
      "enabled_for_roles": ["admin"]
    },
    "downloads": true
  }
}