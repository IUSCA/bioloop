{
  "mode": "default",
  "app_id": "bioloop-dev.sca.iu.edu",
  "express": {
    "port": 3030,
    "host": "localhost"
  },
  "logger": {
    "level": "debug"
  },
  "workflow_server": {
    "base_url": "http://127.0.0.1:5000",
    "auth_token": ""
  },
  "auth": {
    "mode": "dev",
    "jwt": {
      "iss": "localhost",
      "ttl_milliseconds": 604800000,
      "pub": "keys/auth.pub",
      "key": "keys/auth.key",
      "sign_algorithm": "RS256"
    },
    "google": {
      "authorization_endpoint": "https://accounts.google.com/o/oauth2/v2/auth",
      "token_endpoint": "https://oauth2.googleapis.com/token",
      "scope": "openid email",
      "client_id": "",
      "client_secret": ""
    },
    "cilogon": {
      "authorization_endpoint": "https://cilogon.org/authorize",
      "token_endpoint": "https://cilogon.org/oauth2/token",
      "scope": "openid+email",
      "client_id": "",
      "client_secret": ""
    }
  },
  "oauth": {
    "base_url": "http://127.0.0.1:5050",
    "download": {
      "client_id": "",
      "client_secret": "",
      "scope_prefix": "download_file:"
    }
  },
  "download_server": {
    "base_url": "http://localhost:8000"
  },
  "workflow_registry": {
    "integrated": {
      "description": "An end-to-end workflow to inspect, archive, state and validate a dataset",
      "steps": [
        {
          "name": "inspect",
          "task": "inspect_dataset"
        },
        {
          "name": "archive",
          "task": "archive_dataset"
        },
        {
          "name": "stage",
          "task": "stage_dataset"
        },
        {
          "name": "validate",
          "task": "validate_dataset"
        },
        {
          "name": "generate_qc",
          "task": "generate_qc"
        }
      ]
    },
    "stage": {
      "steps": [
        {
          "name": "stage",
          "task": "stage_dataset"
        },
        {
          "name": "validate",
          "task": "validate_dataset"
        },
        {
          "name": "generate_qc",
          "task": "generate_qc"
        }
      ]
    },
    "delete": {
      "steps": [
        {
          "name": "delete",
          "task": "delete_dataset"
        }
      ]
    }
  },
  "dataset_types" : ["RAW_DATA", "DATA_PRODUCT"]
}