{
  "mode": "default",
  "app_id": "bioloop-dev.sca.iu.edu",
  "express": {
    "port": 3030,
    "host": "localhost"
  },
  "logger": {
    "level": "debug"
  },
  "workflow_server": {
    "base_url": "http://127.0.0.1:5001",
    "auth_token": ""
  },
  "auth": {
    "mode": "dev",
    "jwt": {
      "iss": "localhost",
      "ttl_milliseconds": 604800000,
      "pub": "keys/auth.pub",
      "key": "keys/auth.key",
      "sign_algorithm": "RS256"
    },
    "google": {
      "enabled": true,
      "authorization_endpoint": "https://accounts.google.com/o/oauth2/v2/auth",
      "token_endpoint": "https://oauth2.googleapis.com/token",
      "scope": "openid email",
      "client_id": "",
      "client_secret": ""
    },
    "cilogon": {
      "enabled": true,
      "authorization_endpoint": "https://cilogon.org/authorize",
      "token_endpoint": "https://cilogon.org/oauth2/token",
      "scope": "openid+email",
      "client_id": "",
      "client_secret": ""
    }
  },
  "oauth": {
    "base_url": "",
    "download": {
      "client_id": "",
      "client_secret": "",
      "scope_prefix": "download_file:"
    }
  },
  "download_server": {
    "base_url": ""
  },
  "workflow_registry": {
    "integrated": {
      "description": "An end-to-end workflow to inspect, archive, state and validate a dataset",
      "steps": [
        {
            "name": "await stability",
            "task": "await_stability"
        },
        {
            "name": "inspect",
            "task": "inspect_dataset"
        },
        {
            "name": "archive",
            "task": "archive_dataset"
        },
        {
            "name": "stage",
            "task": "stage_dataset"
        },
        {
            "name": "validate",
            "task": "validate_dataset"
        },
        {
            "name": "setup_download",
            "task": "setup_dataset_download"
        }
    ]
    },
    "stage": {
      "steps": [
        {
          "name": "stage",
          "task": "stage_dataset"
        },
        {
          "name": "validate",
          "task": "validate_dataset"
        },
        {
          "name": "setup_download",
          "task": "setup_dataset_download"
        }
      ]
    },
    "delete": {
      "steps": [
        {
          "name": "delete",
          "task": "delete_dataset"
        }
      ]
    },
    "accept_duplicate_dataset": {
      "description": "Overwrites an existing dataset with its incoming duplicate.",
      "steps": [
        {
          "name": "archive",
          "task": "archive_dataset"
        }, {
          "name": "stage",
          "task": "stage_dataset"
        }, {
          "name": "validate",
          "task": "validate_dataset"
        }, {
          "name": "setup_download",
          "task": "setup_dataset_download"
        }
      ]
    },
    "reject_duplicate_dataset": {
      "description": "Rejects an incoming duplicate dataset by prohibiting its ingestion into the system.",
      "steps": [
        {
          "name": "purge resources",
          "task": "purge_duplicate_dataset_resources"
        }
      ]
    }
  },
  "DATASET_STATES": {
      "REGISTERED": "REGISTERED",
      "READY": "READY",
      "INSPECTED": "INSPECTED",
      "ARCHIVED": "ARCHIVED",
      "FETCHED": "FETCHED",
      "STAGED": "STAGED",
      "DUPLICATE_REGISTERED": "DUPLICATE_REGISTERED",
      "DUPLICATE_READY": "DUPLICATE_READY",
      "DUPLICATE_ACCEPTED": "DUPLICATE_ACCEPTED",
      "DUPLICATE_REJECTED": "DUPLICATE_REJECTED",
      "OVERWRITTEN": "OVERWRITTEN",
      "DELETED": "DELETED"
  },
  "ACTION_ITEM_TYPES": {
    "DUPLICATE_DATASET_INGESTION": "DUPLICATE_DATASET_INGESTION"
  },
  "dataset_types" : ["RAW_DATA", "DATA_PRODUCT"],
  "e2e": {
    "users": {
      "admin": {
        "username": ""
      },
      "operator": {
        "username": ""
      },
      "user": {
        "username": ""
      }
    }
  },
  "WORKFLOW_STATUS": {
    "PENDING": "PENDING",
    "STARTED": "STARTED",
    "SUCCESS": "SUCCESS",
    "FAILURE": "FAILURE",
    "REVOKED": "REVOKED"
  }
}